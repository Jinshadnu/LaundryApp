<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="items"
            type="com.example.laundryapp.fragments.pojo.Items" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="@dimen/size_5dp"
            app:cardCornerRadius="@dimen/size_5dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@color/colorwhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/size_100dp"
                    android:layout_height="@dimen/size_70dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/t_shirt"
                    app:banners="@{items.product_image}"
                     />

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@{items.product_name}"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textColor="@color/colorblack"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="2"
                    android:padding="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView6" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:padding="1dp"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                         />


                    <TextView
                        android:id="@+id/textView_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(items.product_price)}"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:padding="1dp"
                        android:layout_toRightOf="@id/textView36"
                        app:layout_constraintBottom_toBottomOf="@+id/textView36"
                        app:layout_constraintStart_toEndOf="@+id/textView36"
                        app:layout_constraintTop_toTopOf="@+id/textView36"
                        app:layout_constraintVertical_bias="0.476" />

                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/elegant_count"
                        android:layout_width="@dimen/size_80dp"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_gravity="end"
                        app:layout_constraintBottom_toBottomOf="@+id/textView36"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/padd_10"
                        tools:ignore="MissingConstraints" />


                </RelativeLayout>





                <Button
                    android:id="@+id/buttonAddCart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button_shape"
                    android:text="Add To Basket"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:textColor="@color/colorwhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</layout>
